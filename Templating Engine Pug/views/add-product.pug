extends layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content
    form(action='/admin/add-product' method='POST')
        .form-group.row.mb-2
            label.col-sm-2.col-form-label(for='name') Product Name
            .col-sm-10
                input.form-control#name(type='text' name='name')
        .form-group.row.mb-2
            label.col-sm-2.col-form-label(for='price') Price
            .col-sm-10
                input.form-control#price(type='text' name='price')
        .form-group.row.mb-2
            label.col-sm-2.col-form-label(for='image') Image
            .col-sm-10
                input.form-control#image(type='text' name='image')
        .form-group.row.mb-2
            label.col-sm-2.col-form-label(for='description') Description
            .col-sm-10
                input.form-control#description(type='text' name='description')
        .form-group.row.mb-2
            .col-sm-10.offset-sm-2
                input.btn.btn-primary(type='submit' value='Save Product')
