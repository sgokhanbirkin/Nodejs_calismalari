#mySlider.carousel.slide(data-bs-ride='carousel')
        .carousel-inner
            .carousel-item.active
                img(src='./img/slider1.png')
            .carousel-item
                img(src='./img/slider2.png')
            .carousel-item
                img(src='./img/slider3.png')
        button.carousel-control-prev(type='button' data-bs-target='#mySlider' data-bs-slide='prev')
            span.carousel-control-prev-icon(aria-hidden='true')
            span.visually-hidden Previous
        button.carousel-control-next(type='button' data-bs-target='#mySlider' data-bs-slide='next')
            span.carousel-control-next-icon(aria-hidden='true')
            span.visually-hidden Next